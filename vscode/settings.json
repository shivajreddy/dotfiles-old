{
  /*
  # General Settings --------------------------------------------------------------
  */
  "scm.diffDecorationsGutterAction": "none", // decorations on scrollbar
  "scm.diffDecorationsGutterPattern": {
    "added": false,
    "modified": false
  },
  "breadcrumbs.enabled": false,
  /*
  # VIM Settings --------------------------------------------------------------
  */
  "vim.easymotion": true,
  "vim.leader": " ",
  // https://www.barbarianmeetscoding.com/boost-your-coding-fu-with-vscode-and-vim/moving-even-faster-with-vim-sneak-and-easymotion/#:~:text=Vim%2Dsneak%20and%20vim%2DEasyMotion,you'll%20find%20the%20switch.
  // "vim.normalModeKeyBindingsNonRecursive": [
  //   {
  //     "before": ["<space>", "s"],
  //     "commands": ["workbench.action.files.save"]
  //   },
  //   {
  //     "before": ["<space>", "k"],
  //     "commands": ["easymotion"]
  //   }
  // ],
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.showmodename": false,
  /*
  # Editor settings --------------------------------------------------------------
  */
  "editor.fontSize": 14,
  "editor.lightbulb.enabled": false,
  "scm.diffDecorations": "none",
  "editor.selectionHighlight": true,
  "editor.occurrencesHighlight": true,
  "editor.comments.insertSpace": true,
  "editor.comments.ignoreEmptyLines": true,
  "editor.renderLineHighlight": "line",
  "terminal.integrated.cursorBlinking": true,
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "Fira Code,'Dank Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.snippetSuggestions": "bottom",
  "editor.wordBasedSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.minimap.renderCharacters": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "editor.formatOnPaste": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.padding.bottom": 800,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "editor.guides.bracketPairs": true,
  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,
  /*
  # Workbench settings --------------------------------------------------------------
  */
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.showIcons": false,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBorder": "#2b2a2a",
    "tab.activeBackground": "#151515",
    "tab.unfocusedActiveBackground": "#151515",
    "tab.inactiveBackground": "#2a2a2a",
    "editor.foldBackground": "#0000",
    "tab.unfocusedActiveBorder": "#0000"
  },
  /*
  # TERMINAL Settings --------------------------------------------------------------
  */
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontWeight": "500",
  "C_Cpp.enhancedColorization": "enabled",
  "terminal.integrated.fontSize": 13,
  /*
  # Explorer Settings --------------------------------------------------------------
  */
  "files.exclude": {
    "**/*xcodeproj*": true,
    "**/*out*": true,
    "**/.vscode": true,
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.ts": "${capture}.typegen.ts",
    "*.tsx": "${capture}.typegen.ts",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  },
  "explorer.confirmDelete": false,
  /*
  # Better Comments settings --------------------------------------------------------------
  */
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "#",
      "color": "#E78BDA",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  /*
  # OTHERS --------------------------------------------------------------
  */
  "files.defaultLanguage": "{activeEditorLanguage}",
  "javascript.validate.enable": false,
  "php.suggest.basic": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  "grunt.autoDetect": "off",
  "gulp.autoDetect": "off",
  "npm.runSilent": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  "security.workspace.trust.untrustedFiles": "open",
  "zenMode.hideTabs": false,
  "zenMode.hideStatusBar": false,
  "settingsSync.keybindingsPerPlatform": true,
  "zenMode.hideLineNumbers": false,
  // Language specific indentation
  "files.autoSave": "afterDelay",
  "git.openRepositoryInParentFolders": "never",
  "extensions.ignoreRecommendations": true,
}
